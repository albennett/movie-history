<div class="btn-group" role="group" aria-label="...">
  <button type="button" class="btn btn-default">Watched</button>
  <button type="button" class="btn btn-default">|</button>
  <button type="button" class="btn btn-default">Unwatched</button>
</div>

{{!-- TESTING GROUND --}}
{{#each this}}
<div class="col-xs-4" key="{{@key}}">
	<div class="poster">
		<img src="{{omdb_data.Poster}}">
		<span class="glyphicon glyphicon-trash"></span>
	</div>
	<button class="movie-watch" watched="{{watched}}">Watch</button>
	<div class="stars" watched="{{watched}}">
		<input id="{{@key}}" class="rating" data-min="0" data-max="5" data-step="1" data-show-clear="false" data-show-caption="false" data-size="xs" value="{{rating}}">
	</div>
</div>
{{/each}}